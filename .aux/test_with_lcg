#!/usr/bin/env bash
LCG=$1
CMTCONFIG=$2
source /cvmfs/sft.cern.ch/lcg/views/${LCG}/${CMTCONFIG}/setup.sh
source build/INSTALL/thisostap.sh 
cd build 
ctest -N  && cmake .. -DCMAKE_INSTALL_PREFIX=./INSTALL/ && ctest -j2 -R para_add --repeat-until-fail 5  --output-on-failure --test-output-size-failed 5000000
