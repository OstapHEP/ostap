#!/usr/bin/env bash
LCG=$1
CMTCONFIG=$2
source /cvmfs/sft.cern.ch/lcg/views/${LCG}/${CMTCONFIG}/setup.sh
source build/INSTALL/thisostap.sh 
cd build 
ctest -N  && cmake .. -DCMAKE_INSTALL_PREFIX=./INSTALL/ && ctest -j4 -R '(addbranch|splot)'  --repeat-until-fail 20  --output-on-failure --test-output-size-failed 5000000
