#!/usr/bin/env bash
LCG=$1
CMTCONFIG=$2
source /cvmfs/sft.cern.ch/lcg/views/${LCG}/${CMTCONFIG}/setup.sh
source ./build/INSTALL/thisostap.sh 
cd build

( ctest -N &&
  cmake .. -DCMAKE_INSTALL_PREFIX=./INSTALL &&
  cmake .. -DCMAKE_INSTALL_PREFIX=./INSTALL &&
  cmake .. -DCMAKE_INSTALL_PREFIX=./INSTALL &&
  OSTAP_BATCH=True COLUMNS=180 ctest -j4 -R '(reso|models$)' --output-on-failure --test-output-size-failed 5000000 )

